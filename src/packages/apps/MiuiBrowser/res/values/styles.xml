    <style name="BrowserTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="miui:v5_top_placeholder_enabled">true</item>
        <item name="miui:v5_top_placeholder">@drawable/title_bar_nav_bg_port</item>
        <item name="miui:v5_tab_indicator_shadow">@null</item>
        <item name="miui:v5_over_scroll_distance">0dip</item>
        <item name="miui:v5_over_fling_distance">6dip</item>
    </style>
    <style name="ActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:background">@miui:drawable/v5_edit_mode_top_bar_no_shadow_bg_light</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="DialogWhenLarge" parent="@android:style/Theme.Holo.Light.DialogWhenLarge" >
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="BookmarkTheme" parent="@android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="EditorActivityTheme" parent="@miui:style/V5.Theme.Light">
       <item name="android:windowActionBar">true</item>
       <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="Suggestions" parent="@android:style/Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownVerticalOffset">1px</item>
    </style>
    <style name="ShortcutTheme" parent="@android:Theme.Holo.Light.DialogWhenLarge">
    </style>
    <style name="TabBarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
    <style name="GroupNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BookmarkLabelTextView">
        <item name="android:layout_width">@dimen/bookmark_thumbnail_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/bookmark_label_bg</item>
    </style>
    <style name="ActionBarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="ActionBarItemImage" parent="@style/ActionBarItem">
        <item name="android:scaleType">center</item>
    </style>
    <style name="ActionBarItemText" parent="@style/ActionBarItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AutofillProfileTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">#a3a3a3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="AutofillProfileSubTextView" parent="@style/AutofillProfileTextView">
        <item name="android:textColor">#c8c8c8</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="AutofillProfileEditText" parent="@style/AutofillProfileTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">flagNoExtractUi|actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#585858</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomBarIconSpecial" parent="BottomBarIconNormal">
        <item name="android:background">@drawable/v5_bottom_bar_tabs_count_bg</item>
    </style>

   <style name="GroupEditeText" parent="@miui:style/V5.Widget.EditText">
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:background">@miui:drawable/v5_group_item_bg_light</item>
       <item name="android:paddingLeft">10dip</item>
       <item name="android:paddingRight">10dip</item>
   </style>

   <!--底部BottomBar与默认系统保持一致，但是不跟随系统主题变化 -->
    <style name="BottomBarIconNormal">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/action_tabs_normal_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_memo</item>
        <item name="android:textColor">@color/bottom_bar_icon_text_color</item>
        <item name="android:shadowColor">@color/bottom_bar_icon_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

</resources>

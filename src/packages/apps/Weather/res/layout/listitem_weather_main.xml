<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_weather_main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

>
    <LinearLayout
        android:id="@+id/listitem_weather_main_layout_up"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_medium_top_item_background_normal"
    >
        <ImageView
            android:id="@+id/listitem_weather_main_img"
            android:layout_width="22dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/i_drag"
            android:background="#00000000"
        />
        <TextView
            android:id="@+id/listitem_weather_main_key"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColor="#E0000000"
            android:singleLine="true"
            style="@style/text_shadow_2"
        />
        <TextView
            android:id="@+id/listitem_weather_main_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:textSize="12sp"
            android:textColor="#88000000"
            android:singleLine="true"
            style="@style/text_shadow_2"
        />
        <ImageView
            android:id="@+id/listitem_weather_main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_down"
            android:background="#00000000"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_weather_main_layout_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/list_medium_top_item_background_normal"
    >
        <TextView
            android:id="@+id/listitem_weather_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:textSize="12sp"
            android:textColor="#99555555"
        />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:gravity="center_vertical|left"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:background="@drawable/share_text_bg"/>
    <ImageView
        android:id="@+id/share_viwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/share_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dip" >
        <LinearLayout
            android:id="@+id/install_sina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="7dip"
            android:background="@drawable/btn_share">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="@string/install_sina"
                android:drawablePadding="5dip"
                android:drawableLeft="@drawable/sina" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/install_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/install_sina"
            android:background="@drawable/btn_share" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="@string/install_tencent"
                android:drawablePadding="5dip"
                android:drawableLeft="@drawable/tencent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_sina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="7dip"
            android:background="@drawable/btn_share">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:drawablePadding="5dip"
                android:text="@string/share_sina"
                android:drawableLeft="@drawable/sina" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/share_sina"
            android:background="@drawable/btn_share">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:drawablePadding="5dip"
                android:text="@string/share_qq"
                android:drawableLeft="@drawable/tencent" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
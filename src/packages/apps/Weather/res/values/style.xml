<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeatherTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
        <style name="ActionBarStyle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">@null</item>
        <item name="android:height">0dip</item>
    </style>
    <style name="WeatherMainTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="circle_progressbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progressbar</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>
    <style name="circle_main_progressbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/circle_main_progressbar</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>

    <style name="background_null">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    <style name="text_group_title">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/information_warning</item>
        <item name="android:background">@drawable/list_item_with_title_background</item>
    </style>
    <style name="text_shadow">
        <item name="android:shadowColor">#4A000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">4.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="text_shadow_1">
        <item name="android:layerType">software</item>
        <item name="android:shadowColor">#88000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="text_shadow_2">
        <item name="android:layerType">software</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
     <style name="aqi_deails_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b2b2b2</item>
        <item name="android:padding">2dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="aqi_deails_taps_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#b2b2b2</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
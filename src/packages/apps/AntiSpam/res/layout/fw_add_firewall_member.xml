<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:padding="15dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:textSize="@dimen/text_font_size_large"
                android:visibility="gone"/>
        <EditText android:id="@+id/number_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:inputType="phone"
                android:singleLine="True"
                android:hint="@string/number_add_hint"
                android:background="?miui:attr/v5_group_item_bg"
                android:visibility="gone"/>

        <EditText android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:inputType="text"
                android:hint="@string/fw_notes_hint"
                android:background="?miui:attr/v5_group_item_bg"
                android:singleLine="True"/>

        <CheckBox
            android:id="@+id/import_ms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:checked="true"
            android:text="@string/fw_import_ms"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>

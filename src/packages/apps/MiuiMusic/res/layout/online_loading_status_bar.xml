<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ProgressBar
        android:id="@+id/online_status_progressbar"
        style="@miui:style/V5.Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/online_status_text"
        style="@miui:style/V5.TextAppearance.ProgressDialogMessage"
        android:textColor="@color/black_50_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/online_status_progressbar"
        android:layout_centerHorizontal="true" />

</merge>
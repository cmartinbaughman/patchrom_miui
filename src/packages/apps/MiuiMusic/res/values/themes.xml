<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DarkMainPageTheme.NoTitle" parent="@miui:style/V5.Theme.Dark.MainPage">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 正在播放页 Theme -->
    <style name="NowplayingPageTheme" parent="DarkMainPageTheme.NoTitle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 音乐首页 Theme -->
    <style name="MainBrowserTheme" parent="DarkMainPageTheme.NoTitle">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- 音乐首页 ActionBar Style -->
    <style name="MainBrowserActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:displayOptions">showCustom</item>
    </style>

    <!-- 列表选择页 Theme -->
    <style name="PickerActivityTheme" parent="@miui:style/V5.Theme.Dark">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 在线列表选择页 Theme -->
    <style name="OnlineListTheme" parent="@miui:style/V5.Theme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="OnlineTabTheme" parent="@miui:style/V5.Theme.Light.MainPage">
         <item name="android:windowNoTitle">true</item>
         <item name="miui:v5_tab_indicator_bg">@drawable/online_tab_container_bg</item>
    </style>

    <!-- 列表选择页 ActionBar Style -->
    <style name="PickerActivityActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:displayOptions">homeAsUp|useLogo|showHome|showCustom</item>
    </style>

    <!-- 设置页 Theme -->
    <style name="SettingsActivityTheme" parent="@miui:style/V5.Theme.Light.Settings">
    </style>

    <!-- 设置页 ActionBar Style -->
    <style name="SettingsActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">homeAsUp|useLogo|showTitle|showHome|showCustom</item>
    </style>

    <!-- ActionBar中 "更多" 的icon -->
    <style name="ActionButtonOverflowStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow</item>
    </style>

    <!-- 音乐Picker for playlist 的 Theme -->
    <style name="MusicPickerForPlaylistTheme" parent="@miui:style/V5.Theme.Dark">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 在线音乐首页Theme -->
    <style name="OnlineBrowserTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 在线音乐Tab字体 -->
    <style name="OnlineBrowserActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/primary_tab_text</item>
    </style>

    <!-- 列表选择页 ActionBar Style -->
    <style name="TabActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:height">@dimen/tab_action_bar_height</item>
        <item name="android:displayOptions">homeAsUp|useLogo|showHome|showCustom</item>
    </style>

    <!-- 均衡器Theme -->
    <style name="EqualizerActivityTheme" parent="@miui:style/V5.Theme.Dark.NoTitle">
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
    </style>
</resources>

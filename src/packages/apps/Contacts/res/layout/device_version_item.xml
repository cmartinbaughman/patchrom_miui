<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/version_item_relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/device_list_item_height"
    style="@miui:style/V5.Widget.ListView.Item.SingleLine" >

    <TextView
        android:id="@+id/version_name"
        android:layout_marginLeft="@dimen/device_list_text_margin_horizontal"
        android:layout_marginRight="@dimen/device_list_text_margin_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/device_list_item_height"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Primary"
        android:gravity="center_vertical" />

</RelativeLayout>
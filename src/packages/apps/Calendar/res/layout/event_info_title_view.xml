<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/miui_header_panel_bg_normal" >

    <Button
        android:id="@android:id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@miui:drawable/v5_title_bar_back_button_light" />

    <TextView
        android:id="@+id/title"
        style="@miui:style/V5.TextAppearance.EditMode"
        android:text="@string/event_create"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/miui_menu_trash" />

</LinearLayout>
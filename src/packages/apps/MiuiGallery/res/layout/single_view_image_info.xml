<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/v5_photopage_title_bg"
>
    <ImageView android:id="@+id/single_view_back"
        style="@style/PhotoPageTitleButton"
        android:src="@miui:drawable/v5_title_bar_back_button_light"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    />

    <TextView android:id="@+id/image_order_txt"
        style="@style/PhotoPageTitleText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_toRightOf="@id/single_view_back"
    />

    <ImageView android:id="@+id/play_slideshow"
        style="@style/PhotoPageTitleButton"
        android:src="@drawable/v5_photopage_title_slideshow_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
    />
</RelativeLayout>

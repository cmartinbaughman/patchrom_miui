<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <FrameLayout
        style="@miui:style/V5.Widget.ListView.Item.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">
        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:textAppearance="@miui:style/V5.TextAppearance.List.Primary"
            />
        <ImageView style="@style/HomePageTitleNavigatorIcon"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/home_page_selection_mask_bottom"
        style="@style/HomePageSelectionMask"
    />
</FrameLayout>

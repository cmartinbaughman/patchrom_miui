<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:colorBackground="@null"
    android:colorBackgroundCacheHint="@null"
>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/albumset_title_view_height"
            >
            <!-- mask shadow -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/v5_albumset_shadow_top"/>

            <LinearLayout
                android:id="@+id/albumset_page_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <!-- mask shadow -->
        <ImageView
            style="@style/ListViewShadowImage"
            android:background="@drawable/albumset_list_shadow"/>
    </FrameLayout>
</LinearLayout>

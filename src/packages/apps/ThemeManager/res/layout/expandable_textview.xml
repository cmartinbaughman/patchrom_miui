<?xml version="1.0" encoding="utf-8"?>
<com.android.thememanager.view.ExpandableTextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/expandable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/resource_comment_list_text_color"
        android:textSize="@dimen/resource_comment_list_item_text_size"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/expand_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/resource_comment_list_text_color"
        android:textSize="@dimen/resource_comment_list_item_text_size"
        android:paddingTop="3dip"
        android:text="@string/resource_comment_expand_full_text" />

</com.android.thememanager.view.ExpandableTextView>